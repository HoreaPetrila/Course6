<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th>Manager</th>
      <th>Players</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.abbreviation %></td>
        <td><%= team.manager.name %></td>
        <% team.players.each do |player| %>
        <td> <%= player.name %></td>
      <% end %>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Download CSV list', teams_path(format: :csv) %>
<%= link_to 'New Team', new_team_path %>
